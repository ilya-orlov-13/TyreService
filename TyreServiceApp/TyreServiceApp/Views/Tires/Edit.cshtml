@model TyreServiceApp.Models.Tire

@{
    ViewData["Title"] = "Редактировать шину";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Редактировать шину</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="TireId" />
                    
                    <div class="mb-3">
                        <label asp-for="CarId" class="form-label fw-semibold">
                            <i class="bi bi-car-front text-dark"></i> Автомобиль
                        </label>
                        <select asp-for="CarId" class="form-select" asp-items="ViewBag.CarId">
                            <option value="">-- Выберите автомобиль --</option>
                        </select>
                        <span asp-validation-for="CarId" class="text-danger small"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TireType" class="form-label fw-semibold">
                                <i class="bi bi-tag text-dark"></i> Тип шины
                            </label>
                            <input asp-for="TireType" class="form-control" placeholder="Например: Легковая" />
                            <span asp-validation-for="TireType" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Seasonality" class="form-label fw-semibold">
                                <i class="bi bi-snow text-dark"></i> Сезонность
                            </label>
                            <input asp-for="Seasonality" class="form-control" placeholder="Летняя, Зимняя, Всесезонная" />
                            <span asp-validation-for="Seasonality" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Manufacturer" class="form-label fw-semibold">
                                <i class="bi bi-building text-dark"></i> Производитель
                            </label>
                            <input asp-for="Manufacturer" class="form-control" placeholder="Например: Michelin" />
                            <span asp-validation-for="Manufacturer" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="TireModel" class="form-label fw-semibold">
                                <i class="bi bi-tag text-dark"></i> Модель шины
                            </label>
                            <input asp-for="TireModel" class="form-control" placeholder="Модель шины" />
                            <span asp-validation-for="TireModel" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Size" class="form-label fw-semibold">
                                <i class="bi bi-rulers text-dark"></i> Размер
                            </label>
                            <input asp-for="Size" class="form-control" placeholder="225/55 R17" />
                            <span asp-validation-for="Size" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="LoadIndex" class="form-label fw-semibold">
                                <i class="bi bi-arrow-up text-dark"></i> Индекс нагрузки
                            </label>
                            <input asp-for="LoadIndex" class="form-control" type="number" placeholder="91" />
                            <span asp-validation-for="LoadIndex" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="WearPercentage" class="form-label fw-semibold">
                                <i class="bi bi-speedometer text-dark"></i> Износ (%)
                            </label>
                            <input asp-for="WearPercentage" class="form-control" type="number" placeholder="0-100" />
                            <span asp-validation-for="WearPercentage" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Pressure" class="form-label fw-semibold">
                            <i class="bi bi-droplet text-dark"></i> Давление
                        </label>
                        <input asp-for="Pressure" class="form-control" type="number" step="0.1" placeholder="2.5" />
                        <span asp-validation-for="Pressure" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-dark">
                            <i class="bi bi-save"></i> Сохранить изменения
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Вернуться к списку
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}