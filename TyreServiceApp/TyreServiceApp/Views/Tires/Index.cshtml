@* Index.cshtml *@
@model IEnumerable<TyreServiceApp.Models.Tire>

@{
    ViewData["Title"] = "Шины";
}

<div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-circle"></i> Список шин</h4>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle"></i> Добавить шину
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Manufacturer)</th>
                        <th>@Html.DisplayNameFor(model => model.TireModel)</th>
                        <th>@Html.DisplayNameFor(model => model.Size)</th>
                        <th>@Html.DisplayNameFor(model => model.Seasonality)</th>
                        <th>@Html.DisplayNameFor(model => model.WearPercentage)</th>
                        <th class="text-center" style="width: 180px;">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <i class="bi bi-building text-dark me-2"></i>
                                @Html.DisplayFor(modelItem => item.Manufacturer)
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.TireModel)</td>
                            <td class="align-middle">
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.Size)</span>
                            </td>
                            <td class="align-middle">
                                @{
                                    var seasonalityBadge = item.Seasonality switch
                                    {
                                        "Летняя" => "bg-warning",
                                        "Зимняя" => "bg-info",
                                        "Всесезонная" => "bg-success",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @seasonalityBadge">@Html.DisplayFor(modelItem => item.Seasonality)</span>
                            </td>
                            <td class="align-middle">
                                @{
                                    var wearBadge = item.WearPercentage switch
                                    {
                                        >= 80 => "bg-danger",
                                        >= 50 => "bg-warning",
                                        _ => "bg-success"
                                    };
                                }
                                <span class="badge @wearBadge">@Html.DisplayFor(modelItem => item.WearPercentage)%</span>
                            </td>
                            <td class="align-middle">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.TireId" 
                                       class="btn btn-outline-info" 
                                       title="Просмотр">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.TireId" 
                                       class="btn btn-outline-primary" 
                                       title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.TireId" 
                                       class="btn btn-outline-danger" 
                                       title="Удалить">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>