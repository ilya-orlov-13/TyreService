@model TyreServiceApp.Models.Master

@{
    ViewData["Title"] = "Редактировать мастера";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Редактировать мастера</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="MasterId" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FullName" class="form-label fw-semibold">
                                <i class="bi bi-person text-dark"></i> ФИО
                            </label>
                            <input asp-for="FullName" class="form-control" placeholder="Введите полное имя" />
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Position" class="form-label fw-semibold">
                                <i class="bi bi-briefcase text-dark"></i> Должность
                            </label>
                            <input asp-for="Position" class="form-control" placeholder="Например: Мастер-шиномонтажник" />
                            <span asp-validation-for="Position" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Rank" class="form-label fw-semibold">
                                <i class="bi bi-star text-dark"></i> Разряд
                            </label>
                            <input asp-for="Rank" class="form-control" type="number" placeholder="1-6" />
                            <span asp-validation-for="Rank" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="HourlyRate" class="form-label fw-semibold">
                                <i class="bi bi-currency-exchange text-dark"></i> Почасовая ставка
                            </label>
                            <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            <span asp-validation-for="HourlyRate" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-dark">
                            <i class="bi bi-save"></i> Сохранить изменения
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Вернуться к списку
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}