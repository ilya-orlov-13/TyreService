@* Index.cshtml *@
@model IEnumerable<TyreServiceApp.Models.Master>

@{
    ViewData["Title"] = "Мастера";
}

<div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-person-badge"></i> Список мастеров</h4>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle"></i> Добавить мастера
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.Position)</th>
                        <th>@Html.DisplayNameFor(model => model.Rank)</th>
                        <th>@Html.DisplayNameFor(model => model.HourlyRate)</th>
                        <th class="text-center" style="width: 180px;">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <i class="bi bi-person text-dark me-2"></i>
                                @Html.DisplayFor(modelItem => item.FullName)
                            </td>
                            <td class="align-middle">
                                <i class="bi bi-briefcase text-secondary me-2"></i>
                                @Html.DisplayFor(modelItem => item.Position)
                            </td>
                            <td class="align-middle">
                                <span class="badge bg-info">@Html.DisplayFor(modelItem => item.Rank) разряд</span>
                            </td>
                            <td class="align-middle">
                                <i class="bi bi-currency-exchange text-success me-2"></i>
                                <strong>@Html.DisplayFor(modelItem => item.HourlyRate) ₽/ч</strong>
                            </td>
                            <td class="align-middle">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.MasterId" 
                                       class="btn btn-outline-info" 
                                       title="Просмотр">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.MasterId" 
                                       class="btn btn-outline-primary" 
                                       title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.MasterId" 
                                       class="btn btn-outline-danger" 
                                       title="Удалить">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>