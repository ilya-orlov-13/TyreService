@model TyreServiceApp.Models.Service

@{
    ViewData["Title"] = "Редактировать услугу";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Редактировать услугу</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="ServiceCode" />
                    
                    <div class="mb-3">
                        <label asp-for="ServiceName" class="form-label fw-semibold">
                            <i class="bi bi-tools text-dark"></i> Название услуги
                        </label>
                        <input asp-for="ServiceName" class="form-control" placeholder="Например: Шиномонтаж" />
                        <span asp-validation-for="ServiceName" class="text-danger small"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ServiceCost" class="form-label fw-semibold">
                            <i class="bi bi-currency-exchange text-dark"></i> Стоимость
                        </label>
                        <input asp-for="ServiceCost" class="form-control" type="number" step="0.01" placeholder="0.00" />
                        <span asp-validation-for="ServiceCost" class="text-danger small"></span>
                    </div>
                    
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-dark">
                            <i class="bi bi-save"></i> Сохранить изменения
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Вернуться к списку
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}