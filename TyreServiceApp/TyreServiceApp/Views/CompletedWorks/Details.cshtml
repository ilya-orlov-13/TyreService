@model TyreServiceApp.Models.CompletedWork
@{
    ViewData["Title"] = "Подробности о выполненной работе";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Подробности о выполненной работе</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-receipt text-dark"></i> Номер заказа:
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.OrderNumber</strong>
                    </dd>
                    
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-gear text-dark"></i> Услуга:
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@(Model.Service?.ServiceName ?? "Не указана")</strong>
                    </dd>
                    
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-person-badge text-dark"></i> Мастер:
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@(Model.Master?.FullName ?? "Не указан")</strong>
                    </dd>
                    
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-circle text-dark"></i> Количество колес:
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-secondary">@Model.WheelCount</span>
                    </dd>
                    
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-clock text-dark"></i> Время выполнения (мин):
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.CompletionTimeMin</strong>
                    </dd>
                    
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-currency-exchange text-dark"></i> Итоговая стоимость:
                    </dt>
                    <dd class="col-sm-8">
                        <strong class="text-success">@Model.WorkTotal ₽</strong>
                    </dd>
                </dl>
            </div>
            <div class="card-footer bg-light">
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.WorkId" class="btn btn-dark">
                        <i class="bi bi-pencil"></i> Редактировать
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Вернуться к списку
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>