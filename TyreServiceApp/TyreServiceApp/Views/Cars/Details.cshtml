@model TyreServiceApp.Models.Car
@{
    ViewData["Title"] = "Подробности об автомобиле";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Подробности об автомобиле</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-tag text-dark"></i> Марка:
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.Brand</strong>
                    </dd>
                    
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-tag text-dark"></i> Модель:
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.Model</strong>
                    </dd>
                    
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-calendar text-dark"></i> Год выпуска:
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@Model.ManufactureYear</strong>
                    </dd>
                    
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-123 text-dark"></i> Госномер:
                    </dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-secondary fs-6">@Model.LicensePlate</span>
                    </dd>
                    
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-upc text-dark"></i> VIN номер:
                    </dt>
                    <dd class="col-sm-8">
                        <code>@Model.Vin</code>
                    </dd>
                    
                    <dt class="col-sm-4 text-muted">
                        <i class="bi bi-person text-dark"></i> Клиент:
                    </dt>
                    <dd class="col-sm-8">
                        <strong>@(Model.Client?.FullName ?? "Не указан")</strong>
                    </dd>
                </dl>
            </div>
            <div class="card-footer bg-light">
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.CarId" class="btn btn-dark">
                        <i class="bi bi-pencil"></i> Редактировать
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Вернуться к списку
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>