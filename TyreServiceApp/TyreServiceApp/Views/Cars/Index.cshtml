@* Index.cshtml *@
@model IEnumerable<TyreServiceApp.Models.Car>

@{
    ViewData["Title"] = "Автомобили";
}

<div class="card shadow-sm mb-4">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-car-front"></i> Список автомобилей</h4>
        <a asp-action="Create" class="btn btn-light btn-sm">
            <i class="bi bi-plus-circle"></i> Добавить автомобиль
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 80px;">Фото</th>
                        <th>@Html.DisplayNameFor(model => model.Brand)</th>
                        <th>@Html.DisplayNameFor(model => model.Model)</th>
                        <th>@Html.DisplayNameFor(model => model.ManufactureYear)</th>
                        <th>@Html.DisplayNameFor(model => model.LicensePlate)</th>
                        <th>@Html.DisplayNameFor(model => model.Vin)</th>
                        <th>@Html.DisplayNameFor(model => model.Client)</th>
                        <th class="text-center" style="width: 180px;">Действия</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle text-center">
                                @if (!string.IsNullOrEmpty(item.PhotoPath))
                                {
                                    <img src="@item.PhotoPath" 
                                         class="car-photo-thumbnail rounded" 
                                         alt="@item.Brand @item.Model"
                                         style="width: 60px; height: 40px; object-fit: cover; cursor: pointer;"
                                         data-bs-toggle="modal" 
                                         data-bs-target="#photoModal"
                                         data-photo-src="@item.PhotoPath"
                                         data-car-info="@item.Brand @item.Model (@item.LicensePlate)" />
                                }
                                else
                                {
                                    <div class="text-muted" style="width: 60px; height: 40px; line-height: 40px;">
                                        <i class="bi bi-car-front fs-4"></i>
                                    </div>
                                }
                            </td>
                            <td class="align-middle">
                                @Html.DisplayFor(modelItem => item.Brand)
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.Model)</td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.ManufactureYear)</td>
                            <td class="align-middle">
                                <span class="badge bg-secondary">@Html.DisplayFor(modelItem => item.LicensePlate)</span>
                            </td>
                            <td class="align-middle">
                                <small class="text-muted">@Html.DisplayFor(modelItem => item.Vin)</small>
                            </td>
                            <td class="align-middle">
                                <div class="d-flex flex-column">
                                    <a asp-controller="Clients" asp-action="Details" asp-route-id="@item.Client?.ClientId"
                                    class="text-decoration-none @(item.Client == null ? "disabled" : "")">
                                        <span>
                                            <i class="bi bi-person-fill me-1"></i>
                                            @(item.Client?.FullName ?? "Клиент не указан")
                                        </span>
                                    </a>
                                </div>
                            </td>
                            <td class="align-middle">
                                <div class="btn-group btn-group-sm" role="group">
                                    <a asp-action="Details" asp-route-id="@item.CarId" 
                                       class="btn btn-outline-info" 
                                       title="Просмотр">
                                        <i class="bi bi-eye"></i>
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.CarId" 
                                       class="btn btn-outline-primary" 
                                       title="Редактировать">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.CarId" 
                                       class="btn btn-outline-danger" 
                                       title="Удалить">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="photoModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="photoModalLabel">Фото автомобиля</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalPhoto" src="" class="img-fluid rounded" alt="" />
                <p id="modalCarInfo" class="mt-3 text-muted"></p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Инициализация модального окна для фото
        var photoModal = document.getElementById('photoModal');
        photoModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var photoSrc = button.getAttribute('data-photo-src');
            var carInfo = button.getAttribute('data-car-info');
            
            var modalPhoto = document.getElementById('modalPhoto');
            var modalCarInfo = document.getElementById('modalCarInfo');
            
            modalPhoto.src = photoSrc;
            modalCarInfo.textContent = carInfo;
            document.getElementById('photoModalLabel').textContent = 'Фото: ' + carInfo;
        });
    </script>
}

<style>
    .car-photo-thumbnail {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .car-photo-thumbnail:hover {
        transform: scale(1.1);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    a.disabled {
        color: #6c757d !important;
        pointer-events: none;
        cursor: default;
        text-decoration: none;
    }
</style>