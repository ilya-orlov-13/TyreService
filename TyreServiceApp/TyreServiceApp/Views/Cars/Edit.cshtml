@model TyreServiceApp.Models.Car

@{
    ViewData["Title"] = "Редактировать автомобиль";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Редактировать автомобиль</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="CarId" />
                    
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <label asp-for="PhotoFile" class="form-label fw-semibold">
                                <i class="bi bi-camera text-dark"></i> Фото автомобиля
                            </label>
                            <input asp-for="PhotoFile" type="file" class="form-control" 
                                   accept=".jpg,.jpeg,.png,.gif" />
                            <div class="form-text">Максимальный размер: 5MB. Разрешены: JPG, PNG, GIF</div>
                            <span asp-validation-for="PhotoFile" class="text-danger small"></span>
                            
                            <!-- Отображение текущего фото -->
                            @if (!string.IsNullOrEmpty(Model?.PhotoPath))
                            {
                                <div class="mt-2">
                                    <small>Текущее фото:</small>
                                    <div>
                                        <img src="@Model.PhotoPath" class="img-thumbnail mt-1" style="max-width: 200px;" />
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="ClientId" class="form-label fw-semibold">
                                <i class="bi bi-person text-dark"></i> Клиент
                            </label>
                            <select asp-for="ClientId" class="form-select" asp-items="ViewBag.ClientId">
                                <option value="">-- Выберите клиента --</option>
                            </select>
                            <span asp-validation-for="ClientId" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Brand" class="form-label fw-semibold">
                                <i class="bi bi-tag text-dark"></i> Марка
                            </label>
                            <input asp-for="Brand" class="form-control" placeholder="Например: Toyota" />
                            <span asp-validation-for="Brand" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Model" class="form-label fw-semibold">
                                <i class="bi bi-tag text-dark"></i> Модель
                            </label>
                            <input asp-for="Model" class="form-control" placeholder="Например: Camry" />
                            <span asp-validation-for="Model" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="ManufactureYear" class="form-label fw-semibold">
                                <i class="bi bi-calendar text-dark"></i> Год выпуска
                            </label>
                            <input asp-for="ManufactureYear" class="form-control" placeholder="2020" type="number" />
                            <span asp-validation-for="ManufactureYear" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="LicensePlate" class="form-label fw-semibold">
                                <i class="bi bi-123 text-dark"></i> Госномер
                            </label>
                            <input asp-for="LicensePlate" class="form-control" placeholder="А123БВ777" />
                            <span asp-validation-for="LicensePlate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Vin" class="form-label fw-semibold">
                                <i class="bi bi-upc text-dark"></i> VIN номер
                            </label>
                            <input asp-for="Vin" class="form-control" placeholder="17 символов" maxlength="17" />
                            <span asp-validation-for="Vin" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-dark">
                            <i class="bi bi-save"></i> Сохранить изменения
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Вернуться к списку
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}