@model TyreServiceApp.Models.Order

@{
    ViewData["Title"] = "Редактировать заказ";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm">
            <div class="card-header bg-dark text-white">
                <h5 class="mb-0"><i class="bi bi-pencil-square"></i> Редактировать заказ</h5>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    <input type="hidden" asp-for="OrderNumber" />
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="OrderDate" class="form-label fw-semibold">
                                <i class="bi bi-calendar text-dark"></i> Дата заказа
                            </label>
                            <input asp-for="OrderDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="OrderDate" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PaymentDate" class="form-label fw-semibold">
                                <i class="bi bi-credit-card text-dark"></i> Дата оплаты
                            </label>
                            <input asp-for="PaymentDate" class="form-control" type="datetime-local" />
                            <span asp-validation-for="PaymentDate" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CarId" class="form-label fw-semibold">
                                <i class="bi bi-car-front text-dark"></i> Автомобиль
                            </label>
                            <select asp-for="CarId" class="form-select" asp-items="ViewBag.CarId">
                                <option value="">-- Выберите автомобиль --</option>
                            </select>
                            <span asp-validation-for="CarId" class="text-danger small"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="MasterId" class="form-label fw-semibold">
                                <i class="bi bi-person-badge text-dark"></i> Ответственный мастер
                            </label>
                            <select asp-for="MasterId" class="form-select" asp-items="ViewBag.MasterId">
                                <option value="">-- Выберите мастера (не обязательно) --</option>
                            </select>
                            <span asp-validation-for="MasterId" class="text-danger small"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex gap-2 mt-4">
                        <button type="submit" class="btn btn-dark">
                            <i class="bi bi-save"></i> Сохранить изменения
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Вернуться к списку
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}