@model TyreServiceApp.Models.Order

@{
    ViewData["Title"] = "Подробности о заказе";
}

<div class="row justify-content-center">
    <div class="col-md-10 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-info-circle"></i> Подробности о заказе #@Model.OrderNumber</h5>
                <span class="badge bg-light text-dark">@Model.OrderDate.ToString("dd.MM.yyyy")</span>
            </div>
            
            <div class="card-body">
                <div class="row">
                    <!-- Левая колонка: основная информация -->
                    <div class="col-md-6">
                        <h6 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-info-circle me-2"></i> Информация о заказе
                        </h6>
                        
                        <div class="mb-3">
                            <label class="form-label text-muted small">Номер заказа</label>
                            <div class="fs-5 fw-bold">#@Model.OrderNumber</div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label text-muted small">Дата и время заказа</label>
                            <div class="fs-6">
                                <i class="bi bi-calendar2-event me-2"></i>
                                @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label text-muted small">Статус оплаты</label>
                            <div>
                                @if (Model.PaymentDate.HasValue)
                                {
                                    <span class="badge bg-success p-2">
                                        <i class="bi bi-check-circle me-1"></i>
                                        Оплачено @Model.PaymentDate.Value.ToString("dd.MM.yyyy HH:mm")
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark p-2">
                                        <i class="bi bi-clock me-1"></i>
                                        Ожидает оплаты
                                    </span>
                                }
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label text-muted small">Выполнено работ</label>
                            <div>
                                @if (Model.CompletedWorks != null && Model.CompletedWorks.Any())
                                {
                                    <span class="badge bg-primary">
                                        @Model.CompletedWorks.Count() работ
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Нет выполненных работ</span>
                                }
                            </div>
                        </div>
                    </div>
                    
                    <!-- Правая колонка: автомобиль и мастер -->
                    <div class="col-md-6">
                        <h6 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-car-front me-2"></i> Автомобиль и мастер
                        </h6>
                        
                        <!-- Автомобиль -->
                        <div class="mb-4">
                            <div class="d-flex align-items-center mb-2">
                                @if (!string.IsNullOrEmpty(Model.Car?.PhotoPath))
                                {
                                    <img src="@Model.Car.PhotoPath" 
                                         class="rounded me-3" 
                                         style="width: 80px; height: 60px; object-fit: cover;"
                                         alt="@Model.Car?.Brand" />
                                }
                                else
                                {
                                    <div class="rounded bg-light d-flex align-items-center justify-content-center me-3" 
                                         style="width: 80px; height: 60px;">
                                        <i class="bi bi-car-front fs-4 text-muted"></i>
                                    </div>
                                }
                                <div>
                                    <div class="fw-bold fs-6">
                                        @(Model.Car?.Brand ?? "Неизвестно") @(Model.Car?.Model ?? "")
                                    </div>
                                    <div class="text-muted">
                                        Госномер: @(Model.Car?.LicensePlate ?? "не указан")
                                    </div>
                                </div>
                            </div>
                            
                            @if (Model.Car?.Client != null)
                            {
                                <div class="d-flex align-items-center mt-2">
                                    <div class="avatar-placeholder bg-secondary text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                                         style="width: 40px; height: 40px; font-size: 0.9rem;">
                                        @Model.Car.Client.FullName?[0]
                                    </div>
                                    <div>
                                        <div class="fw-medium">@Model.Car.Client.FullName</div>
                                        <small class="text-muted">
                                            <i class="bi bi-telephone me-1"></i>
                                            @Model.Car.Client.Phone
                                        </small>
                                    </div>
                                </div>
                            }
                        </div>
                        
                        <!-- Мастер -->
                        <div>
                            <label class="form-label text-muted small">Ответственный мастер</label>
                            <div>
                                @if (Model.Master != null)
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-placeholder bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" 
                                             style="width: 50px; height: 50px; font-size: 1.1rem;">
                                            @Model.Master.FullName?[0]
                                        </div>
                                        <div>
                                            <div class="fw-bold">@Model.Master.FullName</div>
                                            <div class="text-muted">
                                                @Model.Master.Position, @Model.Master.Rank разряд
                                                <br />
                                                Ставка: @Model.Master.HourlyRate.ToString("C2")/час
                                            </div>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center">
                                        <div class="avatar-placeholder bg-warning text-dark rounded-circle d-flex align-items-center justify-content-center me-3" 
                                             style="width: 50px; height: 50px;">
                                            <i class="bi bi-person-x fs-5"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold text-warning">Мастер не назначен</div>
                                            <small class="text-muted">Назначьте мастера при редактировании заказа</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Список выполненных работ -->
                @if (Model.CompletedWorks != null && Model.CompletedWorks.Any())
                {
                    <div class="mt-4">
                        <h6 class="border-bottom pb-2 mb-3">
                            <i class="bi bi-tools me-2"></i> Выполненные работы
                        </h6>
                        
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Услуга</th>
                                        <th>Кол-во часов</th>
                                        <th>Кол-во колес</th>
                                        <th>Итоговая стоимость</th>
                                        <th>Время выполнения</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var work in Model.CompletedWorks)
                                    {
                                        <tr>
                                            <td>
                                                @if (work.Service != null)
                                                {
                                                    <strong>@work.Service.ServiceName</strong>
                                                    <br />
                                                    <small class="text-muted">Код: @work.ServiceCode</small>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Услуга не найдена</span>
                                                }
                                            </td>
                                            <td>@work.WheelCount шт</td>
                                            <td>@work.WorkTotal.ToString("C2")</td>
                                            <td>@work.CompletionTimeMin мин</td>
                                        </tr>
                                    }
                                </tbody>
                                @if (Model.CompletedWorks.Any())
                                {
                                    <tfoot class="table-light">
                                        <tr>
                                            <th colspan="3">Итого:</th>
                                            <th>@Model.CompletedWorks.Sum(w => w.WorkTotal).ToString("C2")</th>
                                            <th>@Model.CompletedWorks.Sum(w => w.CompletionTimeMin) мин</th>
                                        </tr>
                                    </tfoot>
                                }
                            </table>
                        </div>
                    </div>
                }
                
                <!-- Отсутствие выполненных работ -->
                @if (Model.CompletedWorks == null || !Model.CompletedWorks.Any())
                {
                    <div class="alert alert-info mt-4">
                        <div class="d-flex align-items-center">
                            <i class="bi bi-info-circle fs-4 me-3"></i>
                            <div>
                                <h6 class="alert-heading mb-1">Нет выполненных работ</h6>
                                <p class="mb-0">Для этого заказа еще не добавлены выполненные работы.</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
            
            <div class="card-footer bg-light">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <small class="text-muted">
                            <i class="bi bi-clock-history me-1"></i>
                            Заказ создан: @Model.OrderDate.ToString("dd.MM.yyyy HH:mm")
                        </small>
                    </div>
                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.OrderNumber" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i> Редактировать
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i> К списку заказов
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-placeholder {
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    
    .table th {
        font-weight: 600;
        font-size: 0.85rem;
        text-transform: uppercase;
        color: #6c757d;
    }
</style>